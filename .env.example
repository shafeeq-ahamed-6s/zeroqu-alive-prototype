# DewDrop Pilot MVP Environment Variables
# Copy this file to .env for local development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_API_KEY=your_api_key_here

# App Configuration
VITE_APP_NAME=DewDrop Pilot MVP
VITE_APP_VERSION=0.0.0
VITE_ENVIRONMENT=development

# Authentication (if using external auth service)
VITE_AUTH_DOMAIN=your_auth_domain_here

# Database (if frontend needs direct access)
VITE_DATABASE_URL=your_database_url_here

# Storage (for file uploads, images, etc.)
VITE_STORAGE_BUCKET=your_storage_bucket_here

# Feature Flags (use "true" or "false")
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_THEME_TOGGLE=true

# Development Tools
VITE_DEV_TOOLS=true
